<tr class="dt-filter">
  {{#each colDefs}}
    <th data-colname="{{name}}">
      <div class="input-group">
        <span class="input-group-btn">
          {{#if @first}}
          <button class="btn btn-danger dt-delete-button" type="button"><i class="fa fa-trash"></i></button>
          {{/if}}
          <button class="btn btn-default dt-op-button" type="button">=</button>
        </span>
        <input type="text" class="form-control dt-filtertext" placeholder="{{name}}"> 
      </div>
    </th>
  {{/each}}
</tr>
